<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp 
  xmlns="http://schemas.microsoft.com/office/appforoffice/1.1" 
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
  xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0" 
  xmlns:mailappor="http://schemas.microsoft.com/office/mailappversionoverrides" 
  xsi:type="MailApp">
  
  <Id>f3b3f0c8-2b5f-4bbf-9e5f-44b4d4b6a123</Id>
  <Version>1.0.0.2</Version>
  <ProviderName>Kalexius</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="Wrike ID Reminder"/>
  <Description DefaultValue="Reminds users to include a Wrike Task ID before sending emails."/>
  <IconUrl DefaultValue="https://klxit.github.io/Outlook-addin/icons-64.png"/>
  <HighResolutionIconUrl DefaultValue="https://klxit.github.io/Outlook-addin/icons-64.png"/>
  <SupportUrl DefaultValue="https://github.com/KLXIT/Outlook-addin"/>
  
  <AppDomains>
    <AppDomain>https://klxit.github.io</AppDomain>
  </AppDomains>
  
  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>
  
  <Requirements>
    <Sets DefaultMinVersion="1.1">
      <Set Name="Mailbox"/>
    </Sets>
  </Requirements>
  
  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://klxit.github.io/Outlook-addin/functions.html"/>
        <RequestedHeight>250</RequestedHeight>
      </DesktopSettings>
    </Form>
  </FormSettings>
  
  <Permissions>ReadWriteItem</Permissions>
  
  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Read"/>
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Edit"/>
  </Rule>
  
  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides" xsi:type="VersionOverridesV1_0">
    <Requirements>
      <bt:Sets DefaultMinVersion="1.5">
        <bt:Set Name="Mailbox"/>
      </bt:Sets>
    </Requirements>
    
    <Hosts>
      <Host xsi:type="MailHost">
        <DesktopFormFactor>
          <FunctionFile resid="Commands.Url"/>
          
          <ExtensionPoint xsi:type="Events">
            <Event Type="ItemSend" FunctionExecution="synchronous" FunctionName="onMessageSendHandler"/>
          </ExtensionPoint>
        </DesktopFormFactor>
      </Host>
    </Hosts>
    
    <Resources>
      <bt:Images>
        <bt:Image id="Icon.16x16" DefaultValue="https://klxit.github.io/Outlook-addin/icons-64.png"/>
        <bt:Image id="Icon.32x32" DefaultValue="https://klxit.github.io/Outlook-addin/icons-64.png"/>
        <bt:Image id="Icon.80x80" DefaultValue="https://klxit.github.io/Outlook-addin/icons-64.png"/>
      </bt:Images>
      <bt:Urls>
        <bt:Url id="Commands.Url" DefaultValue="https://klxit.github.io/Outlook-addin/functions.html"/>
      </bt:Urls>
      <bt:ShortStrings>
        <bt:String id="GroupLabel" DefaultValue="Wrike ID Reminder"/>
        <bt:String id="TaskpaneButton.Label" DefaultValue="Wrike"/>
      </bt:ShortStrings>
      <bt:LongStrings>
        <bt:String id="TaskpaneButton.Tooltip" DefaultValue="Check for Wrike ID in email subject"/>
      </bt:LongStrings>
    </Resources>
  </VersionOverrides>
</OfficeApp>
